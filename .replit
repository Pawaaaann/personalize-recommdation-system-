modules = ["nodejs-20", "bash", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["gcc", "llvmPackages.openmp"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./start-dev.sh"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 44157
externalPort = 3002

[[ports]]
localPort = 46385
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "python -m uvicorn src.edurec.api.main:app --host localhost --port 8000 & cd frontend && npx vite preview --host 0.0.0.0 --port 5000"]
build = ["bash", "-c", "cd frontend && npm ci && npm run build"]
